<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TextView
            android:layout_marginTop="20dp"
            android:text="성함"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
        android:id="@+id/input_name"
            android:text="성함을 입력하세요"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="25"/>
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#71B9F7" />
    <TextView
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="부서"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/input_dept"
        android:text="부서를 선택하세요"
        android:spinnerMode="dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="25"
        />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#71B9F7" />

        <TextView
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:inputType="text"
        android:text="직분"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/input_job"
        android:text="직분을 선택하세요"
        android:spinnerMode="dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="25"
      />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#71B9F7" />
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/verification"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="인증여부 확인필요"
            android:textStyle="bold"
            android:textColor="#E2633C"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/request_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@+id/verification"
            android:layout_toEndOf="@+id/verification"
            android:text="정보수정" />

        <Button
            android:id="@+id/request_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/request_change_btn"
            android:text="취소" />
    </RelativeLayout>

</LinearLayout>
